<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background="@drawable/current_weather_gradient">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImageViewFavorite"
        android:src="@drawable/d02"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvSummaryFavLoc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:id="@+id/tetvTperatureFavLoc"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSummaryFavLoc"
        android:textColor="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="Partly cloudy"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tetvTperatureFavLoc" />

    <TextView
        tools:text="Partly cloudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCityFl"
        android:textColor="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>